@model IEnumerable<DeliveryManager.Models.Entity.Log>

<div class="container-fluid mt-5">
    <h2 class="text-center mb-4">Журнал действий</h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered w-100">
            <thead class="thead-dark">
                <tr>
                    <th scope="col" style="width: 15%;">Время</th>
                    <th scope="col" style="width: 20%;">Действие</th>
                    <th scope="col">Подробности</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model)
                {
                    <tr>
                        <td>@log.Timestamp.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@log.Action</td>
                        <td>@log.Details</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
