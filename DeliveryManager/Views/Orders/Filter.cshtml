@model IEnumerable<DeliveryManager.Models.Entity.Order>

<h2>Фильтрация заказов</h2>

<form asp-action="Filter" method="get">
    <div class="form-group">
        <label for="CityDistrict">Район доставки:</label>
        <input type="text" class="form-control" id="CityDistrict" name="cityDistrict" placeholder="Введите название района" required />
    </div>
    <div class="form-group">
        <label for="FromDate">Дата и время начала:</label>
        <input type="datetime-local" class="form-control" id="FromDate" name="fromDate" required />
    </div>
    <div class="form-group">
        <label for="ToDate">Дата и время окончания:</label>
        <input type="datetime-local" class="form-control" id="ToDate" name="toDate" required />
    </div>
    <button type="submit" class="btn btn-primary">Отфильтровать</button>
</form>


@if (Model != null && Model.Any())
{
    <h3>Результаты фильтрации</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Номер заказа</th>
                <th>Вес (кг)</th>
                <th>Район</th>
                <th>Время доставки</th>
                <th>Дата создания</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.Weight</td>
                    <td>@order.CityDistrict</td>
                    <td>@order.DeliveryTime</td>
                    <td>@order.CreatedAt</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Нет доступных заказов.</p>
}

